{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://specula.local/schemas/phase3_prototypes.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["meta", "payload"],
  "properties": {
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "artifact_id",
        "phase",
        "mode",
        "generated_at",
        "validated_by_human",
        "related_artifacts",
        "decision_rationale",
        "evidence_refs",
        "tradeoffs",
        "rejected_alternatives"
      ],
      "properties": {
        "artifact_id": { "type": "string", "minLength": 1 },
        "phase": { "const": "3" },
        "mode": { "type": "string", "enum": ["prototyping", "ethical_gate"] },
        "generated_at": { "type": "string", "format": "date-time" },
        "validated_by_human": { "const": false },
        "related_artifacts": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "decision_rationale": { "type": "string", "minLength": 1 },
        "evidence_refs": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "tradeoffs": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "rejected_alternatives": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        }
      }
    },
    "payload": {
      "type": "object",
      "additionalProperties": false,
      "required": ["prototypes"],
      "properties": {
        "prototypes": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "prototype_id",
              "scenario_id",
              "description",
              "role_in_future",
              "stakeholder_impact",
              "ethical_gate"
            ],
            "properties": {
              "prototype_id": { "type": "string", "minLength": 1 },
              "scenario_id": { "type": "string", "minLength": 1 },
              "description": { "type": "string", "minLength": 1 },
              "role_in_future": { "type": "string", "minLength": 1 },
              "stakeholder_impact": {
                "type": "object",
                "additionalProperties": false,
                "required": ["winners", "losers"],
                "properties": {
                  "winners": {
                    "type": "array",
                    "items": { "type": "string", "minLength": 1 }
                  },
                  "losers": {
                    "type": "array",
                    "items": { "type": "string", "minLength": 1 }
                  }
                }
              },
              "ethical_gate": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                  "status",
                  "violated_values",
                  "systemic_impact",
                  "question_1_value_violation_rationale",
                  "question_2_harmful_practice_rationale",
                  "question_3_unacceptable_dependency_rationale",
                  "reviewer_decision_refs"
                ],
                "properties": {
                  "status": { "type": "string", "enum": ["PASS", "FAIL", "HOLD"] },
                  "violated_values": {
                    "type": "array",
                    "items": { "type": "string", "minLength": 1 }
                  },
                  "systemic_impact": { "type": "string", "enum": ["aligned", "misaligned"] },
                  "question_1_value_violation_rationale": { "type": "string", "minLength": 1 },
                  "question_2_harmful_practice_rationale": { "type": "string", "minLength": 1 },
                  "question_3_unacceptable_dependency_rationale": { "type": "string", "minLength": 1 },
                  "reviewer_decision_refs": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                      "type": "object",
                      "additionalProperties": false,
                      "required": ["validator_role", "decision", "reference"],
                      "properties": {
                        "validator_role": { "type": "string", "minLength": 1 },
                        "decision": { "type": "string", "enum": ["approve", "reject", "hold"] },
                        "reference": { "type": "string", "minLength": 1 }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
