{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://specula.local/schemas/phase4_narrative_system.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["meta", "payload"],
  "properties": {
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "artifact_id",
        "phase",
        "mode",
        "generated_at",
        "validated_by_human",
        "related_artifacts"
      ],
      "properties": {
        "artifact_id": { "type": "string", "minLength": 1 },
        "phase": { "const": "4" },
        "mode": { "const": "narrative_synthesis" },
        "generated_at": { "type": "string", "format": "date-time" },
        "validated_by_human": { "const": false },
        "related_artifacts": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        }
      }
    },
    "payload": {
      "type": "object",
      "additionalProperties": false,
      "required": ["narrative_system"],
      "properties": {
        "narrative_system": {
          "type": "object",
          "additionalProperties": false,
          "required": ["meta_narrative", "storylines", "dynamic_rules"],
          "properties": {
            "meta_narrative": {
              "type": "object",
              "additionalProperties": false,
              "required": ["statement", "supported_values"],
              "properties": {
                "statement": { "type": "string", "minLength": 1 },
                "supported_values": {
                  "type": "array",
                  "items": { "type": "string", "minLength": 1 }
                }
              }
            },
            "storylines": {
              "type": "object",
              "additionalProperties": false,
              "required": ["products", "services", "ai_agents", "community"],
              "properties": {
                "products": { "type": "string", "minLength": 1 },
                "services": { "type": "string", "minLength": 1 },
                "ai_agents": { "type": "string", "minLength": 1 },
                "community": { "type": "string", "minLength": 1 }
              }
            },
            "dynamic_rules": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["if", "then", "while"],
                "properties": {
                  "if": { "type": "string", "minLength": 1 },
                  "then": { "type": "string", "minLength": 1 },
                  "while": { "type": "string", "minLength": 1 }
                }
              }
            }
          }
        }
      }
    }
  }
}
