{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://specula.local/schemas/phase2_brand_dna.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["meta", "payload"],
  "properties": {
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "artifact_id",
        "phase",
        "mode",
        "generated_at",
        "validated_by_human",
        "related_artifacts",
        "decision_rationale",
        "evidence_refs",
        "tradeoffs",
        "rejected_alternatives"
      ],
      "properties": {
        "artifact_id": { "type": "string", "minLength": 1 },
        "phase": { "const": "2" },
        "mode": { "const": "brand_archaeology" },
        "generated_at": { "type": "string", "format": "date-time" },
        "validated_by_human": { "const": false },
        "related_artifacts": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "decision_rationale": { "type": "string", "minLength": 1 },
        "evidence_refs": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "tradeoffs": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "rejected_alternatives": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        }
      }
    },
    "payload": {
      "type": "object",
      "additionalProperties": false,
      "required": ["brand_dna"],
      "properties": {
        "brand_dna": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "radical_values",
            "accepted_biases",
            "moral_entity",
            "refusal_zones",
            "tensions"
          ],
          "properties": {
            "radical_values": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["value", "tested_in", "cost_paid"],
                "properties": {
                  "value": { "type": "string", "minLength": 1 },
                  "tested_in": { "type": "string", "minLength": 1 },
                  "cost_paid": { "type": "string", "minLength": 1 }
                }
              }
            },
            "accepted_biases": {
              "type": "array",
              "items": { "type": "string", "minLength": 1 }
            },
            "moral_entity": { "type": "string", "minLength": 1 },
            "refusal_zones": {
              "type": "array",
              "items": { "type": "string", "minLength": 1 }
            },
            "tensions": {
              "type": "object",
              "additionalProperties": false,
              "required": ["acceptable", "unacceptable"],
              "properties": {
                "acceptable": {
                  "type": "array",
                  "items": { "type": "string", "minLength": 1 }
                },
                "unacceptable": {
                  "type": "array",
                  "items": { "type": "string", "minLength": 1 }
                }
              }
            }
          }
        }
      }
    }
  }
}
