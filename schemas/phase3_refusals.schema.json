{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://specula.local/schemas/phase3_refusals.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["meta", "payload"],
  "properties": {
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "artifact_id",
        "phase",
        "mode",
        "generated_at",
        "validated_by_human",
        "related_artifacts",
        "decision_rationale",
        "evidence_refs",
        "tradeoffs",
        "rejected_alternatives"
      ],
      "properties": {
        "artifact_id": { "type": "string", "minLength": 1 },
        "phase": { "const": "3" },
        "mode": { "const": "refusal_register" },
        "generated_at": { "type": "string", "format": "date-time" },
        "validated_by_human": { "const": false },
        "related_artifacts": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "decision_rationale": { "type": "string", "minLength": 1 },
        "evidence_refs": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "tradeoffs": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "rejected_alternatives": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        }
      }
    },
    "payload": {
      "type": "object",
      "additionalProperties": false,
      "required": ["refusals"],
      "properties": {
        "refusals": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "refusal_id",
              "prototype_id",
              "violated_value",
              "opportunity_cost",
              "identity_signal",
              "date",
              "ethical_gate_assessment"
            ],
            "properties": {
              "refusal_id": { "type": "string", "minLength": 1 },
              "prototype_id": { "type": "string", "minLength": 1 },
              "violated_value": { "type": "string", "minLength": 1 },
              "opportunity_cost": { "type": "string", "minLength": 1 },
              "identity_signal": { "type": "string", "minLength": 1 },
              "date": { "type": "string", "format": "date-time" },
              "ethical_gate_assessment": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                  "question_1_value_violation_rationale",
                  "question_2_harmful_practice_rationale",
                  "question_3_unacceptable_dependency_rationale",
                  "reviewer_decision_refs"
                ],
                "properties": {
                  "question_1_value_violation_rationale": { "type": "string", "minLength": 1 },
                  "question_2_harmful_practice_rationale": { "type": "string", "minLength": 1 },
                  "question_3_unacceptable_dependency_rationale": { "type": "string", "minLength": 1 },
                  "reviewer_decision_refs": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                      "type": "object",
                      "additionalProperties": false,
                      "required": ["validator_role", "decision", "reference"],
                      "properties": {
                        "validator_role": { "type": "string", "minLength": 1 },
                        "decision": { "type": "string", "enum": ["approve", "reject", "hold"] },
                        "reference": { "type": "string", "minLength": 1 }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
