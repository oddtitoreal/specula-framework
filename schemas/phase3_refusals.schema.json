{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://specula.local/schemas/phase3_refusals.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["meta", "payload"],
  "properties": {
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "artifact_id",
        "phase",
        "mode",
        "generated_at",
        "validated_by_human",
        "related_artifacts"
      ],
      "properties": {
        "artifact_id": { "type": "string", "minLength": 1 },
        "phase": { "const": "3" },
        "mode": { "const": "refusal_register" },
        "generated_at": { "type": "string", "format": "date-time" },
        "validated_by_human": { "const": false },
        "related_artifacts": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        }
      }
    },
    "payload": {
      "type": "object",
      "additionalProperties": false,
      "required": ["refusals"],
      "properties": {
        "refusals": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "refusal_id",
              "prototype_id",
              "violated_value",
              "opportunity_cost",
              "identity_signal",
              "date"
            ],
            "properties": {
              "refusal_id": { "type": "string", "minLength": 1 },
              "prototype_id": { "type": "string", "minLength": 1 },
              "violated_value": { "type": "string", "minLength": 1 },
              "opportunity_cost": { "type": "string", "minLength": 1 },
              "identity_signal": { "type": "string", "minLength": 1 },
              "date": { "type": "string", "format": "date-time" }
            }
          }
        }
      }
    }
  }
}
